<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCE8">

    <!-- ごほうびのメッセージ -->
    <TextView
        android:id="@+id/rewardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="スタンプGET！"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stampImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="64dp" />

    <!-- スタンプ画像 -->
    <ImageView
        android:id="@+id/stampImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/stamp_placeholder"
        app:layout_constraintTop_toBottomOf="@id/rewardText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="スタンプ" />

    <Button
        android:id="@+id/viewStampsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="スタンプ一覧を見る"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/stampImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
